            <TableColumn fx:id="colName" prefWidth="75.0" text="Title" />
            <TableColumn fx:id="colArtist" prefWidth="75.0" text="Artist" />
            <TableColumn fx:id="colYear" prefWidth="75.0" text="Year" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
