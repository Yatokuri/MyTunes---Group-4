      <Label fx:id="lblSongDuration" layoutX="820.0" layoutY="76.0" text="0:00" />
      <Label fx:id="lblCurrentSongProgress" layoutX="655.0" layoutY="76.0" text="0:00" />
      <Label fx:id="lblVolume" layoutX="821.0" layoutY="106.0" text="50%" />
